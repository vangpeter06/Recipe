@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Ingredient>;

<h1>Ingredients</h1>

@if (@Model.Count == 0)
{
  <h3>No ingredients have been added yet!</h3>
} 

@foreach (Ingredient ingredient in Model)
{
  <li>@Html.ActionLink($"{ingredient.Name}", "Details", new { id = ingredient.IngredientId }) | @ingredient.Recipe.Name</li>
}

<p>@Html.ActionLink("Add new ingredient", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>