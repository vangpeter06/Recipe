@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Category>;

<h1>Categoriess</h1>

@if (@Model.Count == 0)
{
  <h3>No categoriess have been added yet!</h3>
} 

@foreach (Category category in Model)
{
  <li>@Html.ActionLink($"{category.Tag}", "Details", new { id = category.CategoryId }) </li>
}

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>